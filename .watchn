
var exec = require('child_process').exec
var app = './app/javascripts/app/'


function notify(msg, growl) {
  console.log(msg + ' ' + new Date())
  if (growl) {
    exec('growlnotify -name '+  growl.name + ' -m "' + growl.msg + '"')
  }
}

module.exports.init = function(watchn) {

  // watch the javascripts/app directory for changes
  watchn.watch('javascript', [app], function(options) {
    if (options.curr > options.prev) {
      exec('make app', function(error, stdout, stderr) {
        if (error !== null) notify(error.message, {name: 'JavaScript', msg: 'Build Failed!'})
        else notify('javascript generated')
      })
    }
  })

}

