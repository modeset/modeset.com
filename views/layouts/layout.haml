  %head
    %title Bit Theory / #{@page.nil? ? '' : @page.split(/(\W)/).map(&:capitalize).join}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta(name="description" content="A Software Development Consultancy")
    %meta(name="author" content="Bit Theory")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="imagetoolbar" content="no")
    %meta(name="apple-touch-fullscreen" content="YES")
    %meta(name="apple-mobile-web-app-capable" content="YES")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black")
    %link(rel="stylesheet" href="/stylesheets/style.css" type="text/css")
    %script(src="/javascripts/modernizr.js" type="text/javascript")

  %body(id=@page)
    .guider
    #container
      = haml(:"/layouts/header", :layout => false)
      %section#content
        = yield
      = haml(:"/layouts/footer", :layout => false)
      -# = haml(:"/layouts/nojs", :layout => false)

    #templates
      %script(id="careers_template" type="text/html")
        = haml(:careers, :layout => false)
      %script(id="community_template" type="text/html")
        = haml(:community, :layout => false)
      %script(id="company_template" type="text/html")
        = haml(:company, :layout => false)
      %script(id="index_template" type="text/html")
        = haml(:index, :layout => false)
      %script(id="knowledge_template" type="text/html")
        = haml(:knowledge, :layout => false)
      %script(id="process_template" type="text/html")
        = haml(:process, :layout => false)
      %script(id="services_template" type="text/html")
        = haml(:services, :layout => false)

    %script(src="/javascripts/libs.js" type="text/javascript")
    %script(src="/javascripts/app.js" type="text/javascript")

